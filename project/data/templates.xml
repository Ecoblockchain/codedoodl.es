<?xml version="1.0"?>
<templates>

    <!--
        BASE
    -->

    <template id="main">
        <![CDATA[
            <div id="main"></div>
        ]]>
    </template>

    <template id="wrapper">
        <![CDATA[
            <div id="wrapper"></div>
        ]]>
    </template>

    <!--
        HEADER
    -->

    <template id="site-header">
        <![CDATA[
            <header id="site-header">
                <h1 class="logo"><a class="logo__link" href="<%= home.url %>" data-codeword data-codeword-initial-state="red"><%= home.label %></a></h1>
                <nav class="site-nav">
                    <a class="site-nav__link about-btn" href="<%= about.url %>" data-codeword data-codeword-initial-state="red"><%= about.label %></a>
                    <a class="site-nav__link contribute-btn" href="<%= contribute.url %>" data-codeword data-codeword-initial-state="red"><%= contribute.label %></a>
                    <a class="site-nav__link info-btn" href="#" data-show-info data-codeword data-codeword-initial-state="offwhite"><%= info_label %></a>
                </nav>
                <a href="<%= home.url %>" class="close-btn" data-close-doodle data-codeword data-codeword-initial-state="offwhite"><%= close_label %></a>
            </header>
        ]]>
    </template>

    <!--
        FOOTER
    -->

    <template id="site-footer">
        <![CDATA[
            <footer id="site-footer">
                <nav class="footer-nav">
                    <span class="arrow arrow-right">arrow-right</span>
                    <span class="arrow arrow-left">arrow-left</span>
                </nav>
                <div class="interaction-indicators">
                    <i>mouse</i>&nbsp;
                    <i>keyboard</i>&nbsp;
                    <i>touch</i>
                </div>
            </footer>
        ]]>
    </template>

    <!--
        PAGES
    -->

    <template id="page-home">
        <![CDATA[
            <section id="page-home" class="page page-home">
                <div class="home-grid">
                    <i>I am the home grid</i>
                </div>
            </section>
        ]]>
    </template>

    <template id="page-about">
        <![CDATA[
            <section id="page-about" class="page page-about">
                <div class="page-content">
                    I am the about page content
                </div>
            </section>
        ]]>
    </template>

    <template id="page-contribute">
        <![CDATA[
            <section id="page-contribute" class="page page-contribute">
                <div class="page-content">
                    I am the contribute page content
                </div>
            </section>
        ]]>
    </template>

    <template id="page-doodle">
        <![CDATA[
            <section id="page-doodle" class="page page-doodle">
                <div class="page-content">
                    I am the doodle page content
                </div>
            </section>
        ]]>
    </template>

</templates>
