<?xml version="1.0"?>
<templates>

    <!--
        BASE
    -->

    <template id="main">
        <![CDATA[
            <div id="main"></div>
        ]]>
    </template>

    <template id="wrapper">
        <![CDATA[
            <div id="wrapper"></div>
        ]]>
    </template>

    <!--
        HEADER
    -->

    <template id="site-header">
        <![CDATA[
            <header id="site-header">
                <h1 class="logo"><a class="logo__link" href="<%= home.url %>"><%= home.label %></a></h1>
                <nav class="site-nav">
                    <a class="site-nav__link" href="<%= about.url %>"><%= about.label %></a>
                    <a class="site-nav__link" href="<%= contribute.url %>"><%= contribute.label %></a>
                </nav>
                <span class="close-btn" data-close-doodle><%= close_label %></span>
            </header>
        ]]>
    </template>

    <!--
        FOOTER
    -->

    <template id="site-footer">
        <![CDATA[
            <footer id="site-footer">
                <i>mouse</i>&nbsp;
                <i>keyboard</i>&nbsp;
                <i>touch</i>
            </footer>
        ]]>
    </template>

    <!--
        PAGES
    -->

    <template id="page-home">
        <![CDATA[
            <section id="page-home" class="page page-home">
                <i><%= desc %></i>
            </section>
        ]]>
    </template>

    <template id="page-about">
        <![CDATA[
            <section id="page-about" class="page page-about">
                <i><%= desc %></i>
            </section>
        ]]>
    </template>

    <template id="page-contribute">
        <![CDATA[
            <section id="page-contribute" class="page page-contribute">
                <i><%= desc %></i>
            </section>
        ]]>
    </template>

</templates>
